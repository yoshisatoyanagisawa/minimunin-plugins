#%# family=auto
#%# capabilities=autoconf suggest

# Munin plugin for PCH temperature using pchtherm(4) on FreeBSD

export PATH=/sbin:/usr/bin:/bin

die() {
        echo "$@" 1>&2
        exit 1
}

pchs() {
        sysctl -N dev.pchtherm | awk -F. '$4 == "'"temperature"'" { print $3 }'
}

reqpchs() {
        pchs=$(pchs)
        if [ -z "$pchs" ] ; then
                die "No supported PCH"
        fi
}

autoconf() {
	reqpchs
        if [ -n "$pchs" ] ; then
                echo "yes"
                exit 0
        else
                echo "no (function not supported by kernel)"
                exit 0
        fi
}

suggest() {
        if pchs >/dev/null ; then
            echo "temperature"
        fi
        exit $?
}

config() {
        reqpchs
        echo -n "graph_order"
        for pch in $pchs ; do
                echo -n " PCH$pch"
        done
        echo ""
        echo "graph_category sensors"
        echo "graph_scale no"
        echo "graph_title PCH Temperature"
        echo "graph_vlabel temperature in Â°C"
        for pch in $pchs ; do
                echo "PCH$pch.label PCH $pch"
        done
        exit 0
}

get() {
        reqpchs
        for pch in $pchs ; do
                echo -n "PCH$pch.value "
                sysctl -n "dev.pchtherm.$pch.temperature" | tr -d 'C'
        done
}

self=$(basename $0)

case "$*" in
autoconf)
        autoconf
        ;;
suggest)
        suggest
        ;;
config)
        config
        ;;
*)
        get
        ;;
esac

exit 0


